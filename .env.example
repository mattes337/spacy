# Audio/Video Transcription Service Environment Variables

# Python Configuration
PYTHONUNBUFFERED=1

# Model Configuration
WHISPER_MODEL=base
SPACY_MODEL=en_core_web_sm

# File Processing Configuration
MAX_FILE_SIZE=100MB
TEMP_DIR=/app/temp

# Development Configuration
DEBUG=false
RELOAD=false
TEST_MODE=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Redis Configuration (for production setup)
REDIS_URL=redis://redis:6379/0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/transcription.log

# Security Configuration (for production)
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Resource Limits
MAX_WORKERS=4
WORKER_TIMEOUT=300

# Topic Segmentation Configuration
ENABLE_TOPIC_SEGMENTATION=true
TOPIC_SIMILARITY_THRESHOLD=0.75
MIN_TOPIC_SENTENCES=2

# Speaker Diarization Configuration
ENABLE_SPEAKER_DIARIZATION=true
SPEAKER_DIARIZATION_MODEL=pyannote/speaker-diarization-3.1
MIN_SPEAKERS=1
MAX_SPEAKERS=10

# Model Cache Configuration
MODEL_CACHE_DIR=/root/.cache
WHISPER_CACHE_DIR=/root/.cache/whisper
SPACY_CACHE_DIR=/root/.cache/spacy
